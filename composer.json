{
    "name": "liberu-genealogy/php-gedcom",
    "description": "A PHP library for parsing, manipulating and creating GEDCOM files",
    "type": "library",
    "require": {
        "php": "^8.4",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "phpmd/phpmd": "^2.13"
    },
    "autoload": {
        "psr-4": {
            "Gedcom\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Gedcom\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse src tests",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    },
    "config": {
        "sort-packages": true
    }
}